	headers: {
    	'X-Client-Type': 'web',
    	'X-Client-Version': '1.0.0'
  	}
});

layui.use(['layer','form','element','jquery','table','laydate','util'],function(){
///
var $ = layui.$;
var layer = layui.layer;
