};


form.on('select(driver)', function(data){

	if(data.value == ''){
		$('#options').text('');
		form.render(null, 'storage');
	} else {
		var content = Admin.renderFormItemMulti(options, data.value);
		$('#options').text('').append(content);
		form.render(null, 'storage');
	}
});


form.on('submit(submit_storage)', function(data){
	var index = layer.load();
	var intarr = ['order','id'];
	for (var d in data.field) {
		if ($.inArray(d, intarr)!==-1){
			data.field[d] = parseInt(data.field[d]);
		} else if (d === 'enable_sign'){
			if (data.field[d] == 'on'){
				data.field[d] = true;
			} else {
				data.field[d] = false;
			}
		} else if ( d.indexOf(".") > -1){
			var t = d.split(".");
			var name = t[0];
			var val = t[1];

			if (name in data.field){
				data.field[name][val] = data.field[d];
			} else{
				data.field[name] = {};
				data.field[name][val] = data.field[d];
			}
			delete data.field[d];
		}
	}

	data.field['addition'] = JSON.stringify(data.field['addition']);
	$.ajax({
        type: "POST",
        headers: {'Content-Type': 'application/json'},
        url: data.form.action,
        data: JSON.stringify(data.field),
        dataType: 'json',
        success: function(res) {
        	layer.close(index);
            if (res.code != 200 ){
                layer.msg(res.msg, {icon: 2});
            } else if (res.code == 200){
                setTimeout(function(){
                    parent.location.reload();
                }, 5000);
            } else {
                layer.msg("访问异常!", {icon: 2});
            }
        },
        error:function(e){
        	layer.close(index);
            layer.msg(e, {icon: 2});
        }
    });
    return false;
});
