			"label":"提取文件夹",
			"key": "extract_folder",
			"option" :[
				{"name":"提取到最前","value":"front"},
				{"name":"提取到最后","value":"back"}
			]
		},
		{
			"tag": "input_switch",
			"label":"启用签名",
			"key": "enable_sign",
			"checked":false
		},
		{
			"tag": "input",
			"type":"text",
			"label":"根文件夹路径",
			"key": "addition.root_folder_path",
			"placeholder":"根文件夹路径",
			"default":"/tmp",
